<%= form_for [refinery, :jobs_admin, @job] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @job,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @job[:active] %>
  </div>

  <div class='field'>
    <%= f.label :full_part_time -%>
    <%= f.select :full_part_time, options_for_select([["full-time", "full-time"], ["part-time", "part-time"]], :selected => @job.full_part_time) -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%#= f.text_field :location -%>
    <%= f.select :location, options_for_select([["Ogden, UT", "Ogden, UT"],["Park City, UT", "Park City, UT"],["Rancho Santa Margarita, CA", "Rancho Santa Margarita, CA"],["Quebec, CAN", "Quebec, CAN"]], :selected => @job.location) -%>
  </div>

  <div class='field'>
    <%= f.label :brands -%>
    <%= f.text_field :brands -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description_long, :description_short, :skills_requirements],
                :object => "jobs/job" -%>
  </div>

  

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.jobs.admin.jobs.job'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @job.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
