<% content_for :body_content_title do %>
  <%= @job.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @job.title %>
    </p>
  </section>
  <section>
    <h1>Active</h1>
    <p>
      <%=raw @job.active %>
    </p>
  </section>
  <section>
    <h1>Full Part Time</h1>
    <p>
      <%=raw @job.full_part_time %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @job.location %>
    </p>
  </section>
  <section>
    <h1>Description Long</h1>
    <p>
      <%=raw @job.description_long %>
    </p>
  </section>
  <section>
    <h1>Description Short</h1>
    <p>
      <%=raw @job.description_short %>
    </p>
  </section>
  <section>
    <h1>Skills Requirements</h1>
    <p>
      <%=raw @job.skills_requirements %>
    </p>
  </section>
  <section>
    <h1>Brands</h1>
    <p>
      <%=raw @job.brands %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="jobs">
      <% @jobs.each do |job| %>
        <li>
          <%= link_to job.title, refinery.jobs_job_path(job) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
